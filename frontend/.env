# ============================================
# EBD PROJECT - FRONTEND ENVIRONMENT VARIABLES
# ============================================

# API Configuration
VITE_API_URL=http://localhost:5000/api
VITE_API_TIMEOUT=10000

# Application Configuration
VITE_APP_NAME=EBD Project
VITE_APP_VERSION=1.0.0
VITE_APP_DESCRIPTION=Educational Business Dashboard

# Environment
VITE_NODE_ENV=development
VITE_DEBUG=true

# Authentication
VITE_TOKEN_KEY=ebd_token
VITE_USER_KEY=ebd_user

# Features Flags
VITE_ENABLE_DEBUG_LOGGING=true
VITE_ENABLE_ADMIN_PANEL=true
VITE_ENABLE_PURCHASE_REQUESTS=true
VITE_ENABLE_CREDIT_SYSTEM=true

# UI Configuration
VITE_DEFAULT_THEME=light
VITE_ITEMS_PER_PAGE=10
VITE_MAX_FILE_SIZE=5242880 # 5MB

# URLs
VITE_BACKEND_URL=http://localhost:5000
VITE_FRONTEND_URL=http://localhost:3000

# Development Settings
VITE_DISABLE_STRICT_MODE=false
VITE_SHOW_DEV_TOOLS=true

# Timeouts
VITE_REQUEST_TIMEOUT=30000
VITE_SESSION_TIMEOUT=3600000 # 1 hour in milliseconds

# Validation
VITE_MIN_PASSWORD_LENGTH=6
VITE_MAX_USERNAME_LENGTH=20

# Pagination
VITE_DEFAULT_PAGE_SIZE=10
VITE_MAX_PAGE_SIZE=50

# Notifications
VITE_NOTIFICATION_DURATION=5000
VITE_SUCCESS_MESSAGE_DURATION=3000
VITE_ERROR_MESSAGE_DURATION=5000

# Cache Settings
VITE_CACHE_DURATION=300000 # 5 minutes
VITE_LOCALSTORAGE_PREFIX=ebd_

# Build Information
VITE_BUILD_DATE=2024-12-19
VITE_BUILD_TIMESTAMP=$(date +%s)